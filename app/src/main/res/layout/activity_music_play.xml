<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/music_play_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_transparent"
        android:orientation="horizontal"
        android:padding="@dimen/music_playing_bottom_pading">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/ic_thumbs_up_default" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/music_playing_bottom_pading"
            android:layout_marginStart="@dimen/music_playing_bottom_pading"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/ic_rew_dark" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/music_playing_bottom_pading"
            android:layout_marginStart="@dimen/music_playing_bottom_pading"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_fab_play_btn_selector" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/music_playing_bottom_pading"
            android:layout_marginStart="@dimen/music_playing_bottom_pading"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/ic_fwd_dark" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/music_playing_bottom_pading"
            android:layout_marginStart="@dimen/music_playing_bottom_pading"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/ic_thumbs_down_default"  />

    </LinearLayout>
</RelativeLayout>